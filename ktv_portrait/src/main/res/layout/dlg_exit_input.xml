<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog_dark"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:id="@android:id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/server_ip"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <EditText
        android:id="@android:id/edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_tabs_bar_height"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_edittext_n"
        android:enabled="true"
        android:focusable="true"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textColorHint="#CCC"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@android:id/button2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/selector_green_btn"
            android:minWidth="150dp"
            android:text="@string/save"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <Button
            android:id="@android:id/button1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/selector_red_btn"
            android:minWidth="150dp"
            android:text="@string/close"
            android:textColor="@android:color/white"
            android:textSize="30sp" />
    </LinearLayout>
</LinearLayout>