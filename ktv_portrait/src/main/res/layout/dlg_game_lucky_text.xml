<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/play_adventure_dlg_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="30dp">

    <com.bestarmedia.libwidget.image.RecyclerImageView
        android:id="@+id/riv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:src="@drawable/play_adventure_text02" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <com.bestarmedia.libwidget.image.RecyclerImageView
            android:id="@+id/riv_dlg_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:src="@drawable/selector_game_lucky_dlg_no" />

        <com.bestarmedia.libwidget.image.RecyclerImageView
            android:id="@+id/riv_dlg_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:src="@drawable/selector_game_lucky_dlg_yes" />
    </LinearLayout>
</LinearLayout>