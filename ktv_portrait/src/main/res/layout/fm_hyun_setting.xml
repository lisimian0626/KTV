<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="50dp"
    android:paddingTop="10dp"
    android:paddingRight="50dp">

    <com.bestarmedia.libwidget.image.RecyclerImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/play_hyun_img" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <com.bestarmedia.libwidget.image.RecyclerImageView
            android:id="@+id/riv_switch"
            android:layout_width="270dp"
            android:layout_height="154dp"
            android:background="@drawable/play_hyun_no"
            android:scaleType="fitXY" />

        <com.bestarmedia.libwidget.image.RecyclerImageView
            android:id="@+id/riv_random"
            android:layout_width="270dp"
            android:layout_height="154dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/play_hyun_random"
            android:scaleType="fitXY" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <com.beidousat.karaoke.widget.viewpager.WidgetHyunPager
            android:id="@+id/hyunPager"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="20dp"
            app:horizontalMargin="20dp"
            app:verticalMargin="20dp" />

        <com.beidousat.karaoke.widget.viewpager.WidgetPage
            android:id="@+id/w_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</LinearLayout>