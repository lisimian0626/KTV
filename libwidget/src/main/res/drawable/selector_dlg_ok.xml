<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- 填充颜色 -->
            <solid android:color="#90B147FF"></solid>
            <!-- 线的宽度，颜色灰色 -->
            <stroke android:width="1dp" android:color="#90B147FF"></stroke>
            <!-- 矩形的圆角半径 -->
            <corners android:radius="20dp" />
        </shape>

    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <!-- 填充颜色 -->
            <solid android:color="#90B147FF"></solid>
            <!-- 线的宽度，颜色灰色 -->
            <stroke android:width="1dp" android:color="#90B147FF"></stroke>
            <!-- 矩形的圆角半径 -->
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <!-- 填充颜色 -->
            <solid android:color="#666"></solid>
            <!-- 线的宽度，颜色灰色 -->
            <stroke android:width="1dp" android:color="#666"></stroke>
            <!-- 矩形的圆角半径 -->
            <corners android:radius="20dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <!-- 填充颜色 -->
            <solid android:color="#B147FF"></solid>
            <!-- 线的宽度，颜色灰色 -->
            <stroke android:width="1dp" android:color="#B147FF"></stroke>
            <!-- 矩形的圆角半径 -->
            <corners android:radius="20dp" />
        </shape>

    </item>
    <!-- default -->
</selector>