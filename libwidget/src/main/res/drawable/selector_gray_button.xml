<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="#e62a3341" android:startColor="#e6050c18" android:type="linear" />
            <stroke android:width="1dp" android:color="#e61e2d44"></stroke>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="#e62a3341" android:startColor="#e6050c18" android:type="linear" />
            <stroke android:width="1dp" android:color="#e61e2d44"></stroke>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="#e62a3341" android:startColor="#e6050c18" android:type="linear" />
            <stroke android:width="1dp" android:color="#e61e2d44"></stroke>
        </shape>
    </item>
</selector>