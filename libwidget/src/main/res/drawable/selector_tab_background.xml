<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="@color/tab_fill_end" android:startColor="@color/tab_fill_start" android:type="linear" />
            <stroke android:width="1dp" android:color="@color/tab_stroke"></stroke>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="@color/tab_fill_end" android:startColor="@color/tab_fill_start" android:type="linear" />
            <stroke android:width="1dp" android:color="@color/tab_stroke"></stroke>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="@color/tab_fill_end" android:startColor="@color/tab_fill_start" android:type="linear" />
            <stroke android:width="1dp" android:color="@color/tab_stroke"></stroke>
        </shape>
    </item>
</selector>