<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/bg_red_btn_p" android:state_pressed="true" />
    <item android:drawable="@drawable/bg_red_btn_p" android:state_selected="true" />
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <!-- 填充颜色 -->
            <solid android:color="#666"></solid>
            <!-- 线的宽度，颜色灰色 -->
            <stroke android:width="1dp" android:color="#666"></stroke>
            <!-- 矩形的圆角半径 -->
            <corners android:radius="20dp" />
        </shape>
    </item>

    <item android:drawable="@drawable/bg_red_btn_n" />
    <!-- default -->
</selector>