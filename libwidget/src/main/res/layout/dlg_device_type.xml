<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    >
    <RelativeLayout
        android:id="@+id/dlg_device_type"
        android:layout_width="@dimen/button_max_width"
        android:layout_height="@dimen/button_max_hight"
        android:background="@drawable/dlg_bg"
        >
        <TextView
            android:id="@+id/dlg_device_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/button_title_text_size"
            />
        <TextView
            android:id="@+id/dlg_device_type_title2"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内容"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/dlg_device_type_title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/button_text_size"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dlg_device_type_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/dlg_device_type_title2"
            android:layout_above="@+id/dlg_device_type_ok"
            />

            <TextView
                android:id="@+id/dlg_device_type_ok"
                android:layout_width="200dp"
                android:height="50dp"
                android:layout_height="wrap_content"
                android:text="确定"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/dlg_button_gradient_text_color"
                android:textSize="@dimen/button_text_size"
                android:background="@drawable/selector_dlg_button_gradient"
                />

    </RelativeLayout>
    <ImageView
        android:id="@+id/dlg_device_type_iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dlg_close_new"
        android:layout_alignEnd="@id/dlg_device_type"
        />
</RelativeLayout>