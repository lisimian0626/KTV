<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    >
    <RelativeLayout
        android:id="@+id/dlg_prompt_big"
        android:layout_width="@dimen/button_max_width"
        android:layout_height="390dp"
        android:background="@drawable/dlg_bg"
        android:paddingLeft="@dimen/button_margin_horizontal"
        android:paddingRight="@dimen/button_margin_horizontal"
        android:paddingTop="@dimen/button_margin_vertical"
        android:paddingBottom="@dimen/button_margin_vertical"
        >
        <TextView
            android:id="@+id/dlg_prompt_big_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prompt"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/button_title_text_size"
            />
        <TextView
            android:id="@+id/dlg_prompt_big_tips"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="提示"
            android:visibility="gone"
            android:layout_below="@+id/dlg_prompt_big_title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/button_text_size"
            />
        <ImageView
            android:id="@+id/dlg_prompt_qrcode"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/dlg_prompt_big_tips"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/dlg_prompt_big_conntent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内容"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:visibility="gone"
            android:textSize="@dimen/button_text_size"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            >
            <TextView
                android:id="@+id/dlg_prompt_big_cancle"
                android:layout_width="200dp"
                android:height="50dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:text="取消"
                android:gravity="center"
                android:textColor="@color/dlg_button_text_color"
                android:textSize="@dimen/button_text_size"
                android:background="@drawable/selector_dlg_button_nomal"
                />
            <TextView
                android:id="@+id/dlg_prompt_big_ok"
                android:layout_width="200dp"
                android:height="50dp"
                android:layout_height="wrap_content"
                android:text="确定"
                android:gravity="center"
                android:textColor="@color/dlg_button_gradient_text_color"
                android:textSize="@dimen/button_text_size"
                android:background="@drawable/selector_dlg_button_gradient"
                />

        </LinearLayout>

    </RelativeLayout>
    <ImageView
        android:id="@+id/dlg_prompt_big_iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dlg_close_new"
        android:layout_alignEnd="@id/dlg_prompt_big"
        />
</RelativeLayout>