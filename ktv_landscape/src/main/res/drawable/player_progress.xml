<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/player_progress_background" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <scale
            android:drawable="@drawable/player_progress_color"
            android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <gradient
                    android:angle="270"
                    android:endColor="@color/player_progress_color_end"
                    android:startColor="@color/player_progress_color_start"
                    android:type="linear" />
            </shape>
        </scale>
    </item>
</layer-list>