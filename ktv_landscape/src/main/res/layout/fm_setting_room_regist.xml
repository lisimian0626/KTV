<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_setting">

    <RelativeLayout
        android:id="@+id/rl_top_bar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#353a41">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/room_name_setting"
            android:textColor="#999"
            android:textSize="30sp" />

        <com.bestarmedia.libwidget.image.RecyclerImageView
            android:id="@+id/iv_back"
            android:layout_width="114dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/service_setting_back" />

        <View
            android:layout_width="2dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_back"
            android:background="#666666" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_top_bar"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/setting_room_regist_tv_ktvid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/button_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="房间编号"
            android:textColor="@android:color/white"
            android:textSize="@dimen/button_text_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <com.bestarmedia.libwidget.edit.EditTextEx
                android:id="@+id/setting_room_regist_et_roomcode"
                android:layout_width="364dp"
                android:layout_height="45dp"
                android:background="@drawable/bg_btn_transparent_n"
                android:drawableRight="@drawable/selector_edit_text_clear"
                android:drawablePadding="10dp"
                android:editable="false"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#ffb413"
                android:textColorHint="#b2b2b2"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/button_text_size" />

            <TextView
                android:id="@+id/setting_room_regist_tv_check"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginLeft="24dp"
                android:background="@drawable/bg_yellow_stroke"
                android:gravity="center"
                android:text="检测房间"
                android:textColor="#ffb413"
                android:textSize="@dimen/button_text_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/setting_room_regist_tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/button_text_size"
             />

        <LinearLayout
            android:id="@+id/setting_room_regist_lin_devicetype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册设备类型"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_text_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/setting_room_regist_tv_devicetype"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:background="@drawable/bg_btn_transparent_n"
                    android:gravity="center"
                    android:text="主屏"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/button_text_size" />

                <TextView
                    android:id="@+id/setting_room_regist_tv_choosetype"
                    android:layout_width="140dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="24dp"
                    android:background="@drawable/bg_yellow_stroke"
                    android:gravity="center"
                    android:text="变更设备类型"
                    android:textColor="#ffb413"
                    android:textSize="@dimen/button_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_room_regist_lin_ktvname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="vertical"
                android:visibility="invisible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置房间名称"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/button_text_size" />

                <com.bestarmedia.libwidget.edit.EditTextEx
                    android:id="@+id/setting_room_regist_et_roomname"
                    android:layout_width="364dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_btn_transparent_n"
                    android:drawableRight="@drawable/selector_edit_text_clear"
                    android:drawablePadding="10dp"
                    android:editable="false"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#ffb413"
                    android:textColorHint="#b2b2b2"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/button_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_room_regist_lin_bingdevice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="房间已注册设备"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/button_text_size" />

                <HorizontalScrollView
                    android:layout_width="600dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fadingEdge="horizontal"
                    android:scrollbars="none">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/room_setting_regist_rv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </HorizontalScrollView>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <com.beidousat.karaoke.widget.WidgetKeyboard
        android:id="@+id/keyboard"
        android:layout_width="@dimen/keyboard_width"
        android:layout_height="@dimen/keyboard_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/setting_room_regist_tv_regist"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/selector_dlg_button_gradient"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/setting_room_device_regist"
        android:textColor="@color/dlg_button_gradient_text_color"
        android:textSize="@dimen/button_text_size" />
</RelativeLayout>