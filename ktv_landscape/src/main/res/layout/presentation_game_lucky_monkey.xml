<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.bestarmedia.libwidget.image.RecyclerImageView
        android:id="@+id/riv_game_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/tv_adventure_bg" />


    <com.beidousat.karaoke.widget.game.LuckyMonkeyPanelView
        android:id="@+id/lucky_panel"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="48dp" />

    <LinearLayout
        android:id="@+id/tv_talk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="-100dp"
        android:layout_toEndOf="@+id/riv_girl"
        android:background="@drawable/play_adventure_dialogue"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_role2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="左边起第"
            android:textColor="#333"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tv_lucky_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="1"
            android:textColor="#fe418c"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_role_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人"
            android:textColor="#333"
            android:textSize="26sp" />
    </LinearLayout>


    <com.bestarmedia.libwidget.image.RecyclerImageView
        android:id="@+id/riv_half"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#90000000"
        android:visibility="gone" />

    <com.bestarmedia.libwidget.image.RecyclerImageView
        android:id="@+id/riv_girl"
        android:layout_width="276dp"
        android:layout_height="344dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/tv_adventure_girl" />

    <RelativeLayout
        android:id="@+id/rl_game_result_top"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_role"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/play_adventure_dlg_bg"
            android:gravity="center"
            android:paddingStart="30dp"
            android:paddingTop="45dp"
            android:paddingEnd="30dp"
            android:paddingBottom="30dp"
            android:textColor="#333"
            android:textSize="26sp"
            android:textStyle="bold" />

        <com.bestarmedia.libwidget.image.RecyclerImageView
            android:layout_width="152dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/tv_title01" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_game_result_bottom"
        android:layout_width="400dp"
        android:layout_height="280dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_adventure"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/play_adventure_dlg_bg"
            android:gravity="center"
            android:paddingStart="30dp"
            android:paddingTop="45dp"
            android:paddingEnd="30dp"
            android:paddingBottom="30dp"
            android:textColor="#333"
            android:textSize="26sp"
            android:textStyle="bold" />

        <com.bestarmedia.libwidget.image.RecyclerImageView
            android:layout_width="152dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/tv_title02" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="200dp"
        android:layout_marginEnd="200dp"
        android:background="@drawable/bg_tv_operation_tip"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="12dp"
        android:visibility="gone">

        <com.xw.repo.BubbleSeekBar
            android:id="@+id/sb_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal" />
</RelativeLayout>
