<?xml version="1.0" encoding="utf-8"?>
<com.bestarmedia.libwidget.material.RelativeLayoutMaterial xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@android:id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/iv_cover"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#88323232"
        android:gravity="center"
        android:padding="4dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/tab_text_size" />

    <com.bestarmedia.libwidget.image.RecyclerImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/singer_cover_w_h"
        android:layout_height="@dimen/singer_cover_w_h"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop" />
</com.bestarmedia.libwidget.material.RelativeLayoutMaterial>