<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="100dp"
    android:paddingBottom="120dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="@integer/list_weight"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_tabs_bar_height"
            android:gravity="left|bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ranking_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <com.beidousat.karaoke.widget.viewpager.WidgetTopTabs
                android:id="@+id/topTab"
                android:layout_width="match_parent"
                android:layout_height="@dimen/top_tabs_bar_height"
                app:leftTabWeight="3"
                app:rightTabWeight="1.1" />

        </LinearLayout>

        <com.beidousat.karaoke.widget.viewpager.WidgetSongPagerV4
            android:id="@+id/songPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            app:horizontalMargin="6dp"
            app:verticalMargin="6dp" />

        <com.beidousat.karaoke.widget.viewpager.WidgetPage
            android:id="@+id/w_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="@dimen/keyboard_height"
        android:orientation="vertical"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tv_ranking_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/top_tabs_bar_height"
            android:gravity="bottom"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tab_text_size" />

        <TextView
            android:id="@+id/tv_supporter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_ranking_name"
            android:layout_toRightOf="@+id/tv_ranking_name"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/top_tabs_bar_height"
            android:layout_toRightOf="@+id/tv_supporter"
            android:gravity="bottom"
            android:text="@string/supporter"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tab_text_size" />

        <com.bestarmedia.libwidget.image.RecyclerImageView
            android:id="@+id/iv_ad"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_below="@+id/tv_ranking_name"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/ad_banner_default" />

    </RelativeLayout>


</LinearLayout>






